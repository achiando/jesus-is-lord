{
  "designSystem": {
    "name": "Jesus Is Lord Radio Church App Design System",
    "version": "1.0.0",
    "description": "Unified design system for church ministry app across mobile and desktop platforms",
    "stationName": "Jesus Is Lord Radio",
    "stationShortName": "Jesus Is Lord",
    "logo": {
      "path": "/logo.png",
      "alt": "Jesus Is Lord Radio Logo"
    }
  },
  
  "colors": {
    "primary": {
      "blue": "#2563EB",
      "blueLight": "#DBEAFE",
      "blueHover": "#1D4ED8"
    },
    "accent": {
      "purple": "#8B5CF6",
      "purpleLight": "#EDE9FE",
      "red": "#EF4444",
      "redLight": "#FEE2E2"
    },
    "neutral": {
      "white": "#FFFFFF",
      "gray50": "#F9FAFB",
      "gray100": "#F3F4F6",
      "gray200": "#E5E7EB",
      "gray300": "#D1D5DB",
      "gray400": "#9CA3AF",
      "gray500": "#6B7280",
      "gray600": "#4B5563",
      "gray700": "#374151",
      "gray800": "#1F2937",
      "gray900": "#111827"
    },
    "semantic": {
      "live": "#EF4444",
      "liveBackground": "#FEE2E2",
      "success": "#10B981",
      "warning": "#F59E0B",
      "info": "#3B82F6"
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "display": "Inter, sans-serif"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    }
  },

  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },

  "borderRadius": {
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },

  "components": {
    "liveIndicator": {
      "description": "Consistent live indicator badge used across all screens",
      "mobile": {
        "display": "inline-flex",
        "alignItems": "center",
        "gap": "0.375rem",
        "padding": "0.25rem 0.75rem",
        "backgroundColor": "#FEE2E2",
        "color": "#EF4444",
        "borderRadius": "9999px",
        "fontSize": "0.75rem",
        "fontWeight": 600,
        "textTransform": "uppercase",
        "letterSpacing": "0.05em"
      },
      "desktop": {
        "display": "inline-flex",
        "alignItems": "center",
        "gap": "0.5rem",
        "padding": "0.375rem 1rem",
        "backgroundColor": "#FEE2E2",
        "color": "#EF4444",
        "borderRadius": "9999px",
        "fontSize": "0.875rem",
        "fontWeight": 600,
        "textTransform": "uppercase",
        "letterSpacing": "0.05em"
      },
      "pulsingDot": {
        "width": "0.5rem",
        "height": "0.5rem",
        "backgroundColor": "#EF4444",
        "borderRadius": "50%",
        "animation": "pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite"
      }
    },

    "header": {
      "description": "App header with logo and utility icons",
      "mobile": {
        "display": "flex",
        "justifyContent": "space-between",
        "alignItems": "center",
        "padding": "1rem",
        "backgroundColor": "#FFFFFF",
        "position": "sticky",
        "top": 0,
        "zIndex": 30,
        "borderBottom": "1px solid #E5E7EB"
      },
      "desktop": {
        "display": "flex",
        "justifyContent": "space-between",
        "alignItems": "center",
        "padding": "0 2rem",
        "height": "4rem",
        "backgroundColor": "#FFFFFF",
        "position": "fixed",
        "top": 0,
        "left": 0,
        "right": 0,
        "zIndex": 50,
        "borderBottom": "1px solid #E5E7EB"
      },
      "logo": {
        "height": "2rem",
        "cursor": "pointer"
      },
      "leftSection": {
        "display": "flex",
        "alignItems": "center",
        "gap": "2rem"
      },
      "centerSection": {
        "display": "flex",
        "alignItems": "center",
        "gap": "2rem",
        "desktopOnly": true
      },
      "rightSection": {
        "display": "flex",
        "alignItems": "center",
        "gap": "0.75rem"
      },
      "utilityIcons": [
        {
          "id": "language",
          "icon": "globe",
          "label": "Language",
          "type": "button",
          "showOnMobile": true,
          "showOnDesktop": true,
          "action": "openLanguageSelector"
        },
        {
          "id": "notifications",
          "icon": "bell",
          "label": "Notifications",
          "type": "button",
          "showOnMobile": true,
          "showOnDesktop": true,
          "action": "openNotifications",
          "hasBadge": true
        }
      ],
      "iconButton": {
        "width": "2.5rem",
        "height": "2.5rem",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "borderRadius": "50%",
        "backgroundColor": "transparent",
        "color": "#374151",
        "cursor": "pointer",
        "transition": "background-color 0.2s",
        "hover": {
          "backgroundColor": "#F3F4F6"
        }
      },
      "notificationBadge": {
        "position": "absolute",
        "top": "0.25rem",
        "right": "0.25rem",
        "width": "0.5rem",
        "height": "0.5rem",
        "backgroundColor": "#EF4444",
        "borderRadius": "50%",
        "border": "2px solid #FFFFFF"
      }
    },

    "navigationBar": {
      "mobile": {
        "position": "fixed",
        "bottom": 0,
        "width": "100%",
        "height": "4rem",
        "backgroundColor": "#FFFFFF",
        "borderTop": "1px solid #E5E7EB",
        "display": "flex",
        "justifyContent": "space-around",
        "alignItems": "center",
        "padding": "0.5rem",
        "zIndex": 50
      },
      "desktop": {
        "display": "flex",
        "alignItems": "center",
        "gap": "0.5rem"
      },
      "navItem": {
        "mobile": {
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "gap": "0.25rem",
          "padding": "0.5rem",
          "color": "#6B7280",
          "fontSize": "0.75rem",
          "fontWeight": 500,
          "cursor": "pointer",
          "transition": "color 0.2s"
        },
        "desktop": {
          "display": "flex",
          "alignItems": "center",
          "padding": "0.5rem 1rem",
          "color": "#374151",
          "fontSize": "0.875rem",
          "fontWeight": 500,
          "cursor": "pointer",
          "borderRadius": "0.5rem",
          "transition": "all 0.2s",
          "hover": {
            "backgroundColor": "#F3F4F6"
          }
        }
      },
      "navItemActive": {
        "mobile": {
          "color": "#2563EB"
        },
        "desktop": {
          "color": "#2563EB",
          "backgroundColor": "#DBEAFE"
        }
      },
      "navItems": [
        {
          "id": "home",
          "label": "Home",
          "icon": "home"
        },
        {
          "id": "radio",
          "label": "Radio",
          "icon": "radio"
        },
        {
          "id": "teachings",
          "label": "Teachings",
          "icon": "book"
        },
        {
          "id": "events",
          "label": "Events",
          "icon": "calendar"
        },
        {
          "id": "more",
          "label": "More",
          "icon": "menu",
          "mobileOnly": true
        }
      ]
    },

    "cards": {
      "default": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "0.75rem",
        "padding": "1rem",
        "boxShadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
        "border": "1px solid #E5E7EB"
      },
      "featured": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "1rem",
        "overflow": "hidden",
        "boxShadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1)"
      },
      "programCard": {
        "width": "8rem",
        "aspectRatio": "3/4",
        "borderRadius": "0.5rem",
        "overflow": "hidden",
        "position": "relative"
      }
    },

    "buttons": {
      "primary": {
        "backgroundColor": "#2563EB",
        "color": "#FFFFFF",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontSize": "0.875rem",
        "fontWeight": 600,
        "border": "none",
        "cursor": "pointer",
        "transition": "background-color 0.2s"
      },
      "secondary": {
        "backgroundColor": "#F3F4F6",
        "color": "#374151",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontSize": "0.875rem",
        "fontWeight": 600,
        "border": "none",
        "cursor": "pointer",
        "transition": "background-color 0.2s"
      },
      "icon": {
        "width": "2.5rem",
        "height": "2.5rem",
        "borderRadius": "50%",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "backgroundColor": "#F3F4F6",
        "border": "none",
        "cursor": "pointer"
      },
      "playButton": {
        "width": "4rem",
        "height": "4rem",
        "borderRadius": "50%",
        "backgroundColor": "#2563EB",
        "color": "#FFFFFF",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "border": "none",
        "cursor": "pointer",
        "boxShadow": "0 4px 6px -1px rgba(37, 99, 235, 0.3)"
      }
    },

    "radioPlayer": {
      "description": "Unified radio player component used on both Home and Live Radio pages",
      "usage": {
        "homePage": "Shows as featured card when station is live",
        "radioPage": "Shows as full-screen player interface",
        "sharedState": "Both instances share the same playing state, current program, and audio stream"
      },
      "states": {
        "live": {
          "showLiveIndicator": true,
          "showWaveform": true,
          "enableChat": true
        },
        "offline": {
          "showLiveIndicator": false,
          "showSchedule": true,
          "disablePlayButton": true
        },
        "playing": {
          "iconState": "pause",
          "showWaveform": true,
          "animateWaveform": true
        },
        "paused": {
          "iconState": "play",
          "showWaveform": true,
          "animateWaveform": false
        }
      },
      "mobile": {
        "homeFeaturedCard": {
          "width": "100%",
          "aspectRatio": "16/9",
          "borderRadius": "1rem",
          "overflow": "hidden",
          "position": "relative",
          "background": "linear-gradient(135deg, rgba(0,0,0,0.6), rgba(0,0,0,0.3)), url(background-image)",
          "padding": "1.5rem",
          "display": "flex",
          "flexDirection": "column",
          "justifyContent": "space-between"
        },
        "miniPlayer": {
          "position": "fixed",
          "bottom": "4rem",
          "left": "1rem",
          "right": "1rem",
          "height": "4rem",
          "backgroundColor": "#1F2937",
          "borderRadius": "0.75rem",
          "display": "flex",
          "alignItems": "center",
          "padding": "0.75rem",
          "zIndex": 40
        },
        "fullPlayer": {
          "position": "fixed",
          "top": 0,
          "left": 0,
          "right": 0,
          "bottom": 0,
          "backgroundColor": "#FFFFFF",
          "zIndex": 60,
          "padding": "1rem",
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "justifyContent": "center"
        }
      },
      "desktop": {
        "homeFeaturedCard": {
          "width": "100%",
          "aspectRatio": "21/9",
          "borderRadius": "1.5rem",
          "overflow": "hidden",
          "position": "relative",
          "background": "linear-gradient(135deg, rgba(0,0,0,0.6), rgba(0,0,0,0.3)), url(background-image)",
          "padding": "2rem",
          "display": "flex",
          "flexDirection": "column",
          "justifyContent": "space-between"
        },
        "sidePlayer": {
          "width": "24rem",
          "position": "fixed",
          "right": "2rem",
          "bottom": "2rem",
          "backgroundColor": "#FFFFFF",
          "borderRadius": "1rem",
          "padding": "1.5rem",
          "boxShadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
          "zIndex": 40
        },
        "fullPlayer": {
          "maxWidth": "48rem",
          "margin": "0 auto",
          "padding": "3rem",
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "justifyContent": "center"
        }
      },
      "circularPlayer": {
        "container": {
          "width": "18rem",
          "height": "18rem",
          "position": "relative",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center"
        },
        "rings": {
          "position": "absolute",
          "inset": 0,
          "borderRadius": "50%",
          "background": "radial-gradient(circle, rgba(37, 99, 235, 0.1) 0%, rgba(37, 99, 235, 0.05) 50%, transparent 70%)",
          "animation": "pulse 3s ease-in-out infinite"
        },
        "innerCircle": {
          "width": "12rem",
          "height": "12rem",
          "borderRadius": "50%",
          "backgroundColor": "#FFFFFF",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "boxShadow": "0 10px 40px rgba(37, 99, 235, 0.2)"
        },
        "icon": {
          "width": "3rem",
          "height": "3rem",
          "color": "#2563EB"
        }
      },
      "waveform": {
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "gap": "0.25rem",
        "height": "2rem",
        "bar": {
          "width": "0.25rem",
          "backgroundColor": "#FFFFFF",
          "borderRadius": "0.125rem",
          "animation": "waveform 1s ease-in-out infinite"
        }
      },
      "programInfo": {
        "title": {
          "fontSize": "1.5rem",
          "fontWeight": 700,
          "color": "#111827",
          "marginBottom": "0.5rem"
        },
        "subtitle": {
          "fontSize": "0.875rem",
          "color": "#6B7280"
        },
        "host": {
          "fontSize": "0.875rem",
          "color": "#6B7280",
          "marginTop": "0.25rem"
        }
      }
    },

    "listItem": {
      "teaching": {
        "display": "flex",
        "alignItems": "center",
        "gap": "1rem",
        "padding": "0.75rem",
        "borderRadius": "0.5rem",
        "cursor": "pointer",
        "transition": "background-color 0.2s"
      },
      "event": {
        "display": "flex",
        "gap": "1rem",
        "padding": "1rem",
        "borderRadius": "0.75rem",
        "backgroundColor": "#FFFFFF",
        "border": "1px solid #E5E7EB"
      }
    },

    "calendar": {
      "container": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "0.75rem",
        "padding": "1rem"
      },
      "dayCell": {
        "width": "2.5rem",
        "height": "2.5rem",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "borderRadius": "50%",
        "fontSize": "0.875rem",
        "cursor": "pointer"
      },
      "dayCellActive": {
        "backgroundColor": "#2563EB",
        "color": "#FFFFFF",
        "fontWeight": 600
      }
    }
  },

  "layouts": {
    "mobile": {
      "container": {
        "maxWidth": "100%",
        "padding": "1rem",
        "paddingBottom": "5rem"
      },
      "header": {
        "display": "flex",
        "justifyContent": "space-between",
        "alignItems": "center",
        "padding": "1rem",
        "position": "sticky",
        "top": 0,
        "backgroundColor": "#FFFFFF",
        "zIndex": 30
      }
    },
    "desktop": {
      "container": {
        "maxWidth": "1280px",
        "margin": "0 auto",
        "padding": "2rem",
        "paddingTop": "5rem"
      },
      "grid": {
        "display": "grid",
        "gridTemplateColumns": "repeat(12, 1fr)",
        "gap": "2rem"
      },
      "sidebar": {
        "position": "fixed",
        "left": 0,
        "top": "4rem",
        "bottom": 0,
        "width": "16rem",
        "backgroundColor": "#F9FAFB",
        "padding": "2rem",
        "overflowY": "auto"
      }
    }
  },

  "responsiveBreakpoints": {
    "mobile": "0px",
    "tablet": "768px",
    "desktop": "1024px",
    "wide": "1280px"
  },

  "animations": {
    "pulse": {
      "keyframes": {
        "0%, 100%": {
          "opacity": 1
        },
        "50%": {
          "opacity": 0.5
        }
      },
      "duration": "2s",
      "timingFunction": "cubic-bezier(0.4, 0, 0.6, 1)",
      "iterationCount": "infinite"
    },
    "fadeIn": {
      "keyframes": {
        "from": {
          "opacity": 0
        },
        "to": {
          "opacity": 1
        }
      },
      "duration": "0.3s",
      "timingFunction": "ease-in-out"
    },
    "slideUp": {
      "keyframes": {
        "from": {
          "transform": "translateY(100%)"
        },
        "to": {
          "transform": "translateY(0)"
        }
      },
      "duration": "0.3s",
      "timingFunction": "ease-out"
    }
  }
}